   /* ===== STYLES UNIQUEMENT POUR LES INTERFACES D'APPEL AUDIO/VIDEO ===== */
   
   /* Interface d'appel audio */
   #audio-call-div {
     background: linear-gradient(135deg, #0066ff 0%, #0052cc 100%);
     border-radius: 20px;
     padding: 2rem;
     margin: 1rem;
     box-shadow: 0 15px 40px rgba(0, 102, 255, 0.3);
     color: white;
     text-align: center;
     position: relative;
   }

   #audio-call-div #callimg img {
     width: 200px !important;
     height: 200px;
     border: 6px solid rgba(255, 255, 255, 0.3);
     box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
     transition: transform 0.3s ease;
     animation: pulse 2s infinite;
   }

   @keyframes pulse {
     0% { transform: scale(1); }
     50% { transform: scale(1.05); }
     100% { transform: scale(1); }
   }

   #audio-call-div hr {
     border: none;
     height: 2px;
     background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
     margin: 1.5rem 0;
   }

   #audio-call-div .audio-call-action-div {
     margin-top: 2rem;
     display: flex;
     justify-content: center;
     gap: 1rem;
   }

   #audio-call-div .audio-call-action-div .btn {
     width: 60px;
     height: 60px;
     border-radius: 50%;
     border: 2px solid rgba(255, 255, 255, 0.3);
     backdrop-filter: blur(10px);
     transition: all 0.3s ease;
     font-size: 1.3rem;
     display: flex;
     align-items: center;
     justify-content: center;
   }

   #audio-call-div .audio-call-action-div .btn:hover {
     transform: scale(1.1);
     box-shadow: 0 10px 25px rgba(0, 0, 0, 0.4);
   }

   #audio-call-div .audio-call-action-div .btn-danger {
     background: rgba(255, 71, 87, 0.9);
     border-color: rgba(255, 71, 87, 0.5);
   }

   #audio-call-div .audio-call-action-div .btn-primary {
     background: rgba(0, 102, 255, 0.9);
     border-color: rgba(0, 102, 255, 0.5);
   }

   /* Interface d'appel vidéo - Layout amélioré */
   #video-call-div {
     background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
     border-radius: 20px;
     padding: 0;
     margin: 0;
     box-shadow: 0 15px 40px rgba(0, 0, 0, 0.5);
     color: white;
     position: relative;
     width: 100%;
     height: 500px;
     display: flex;
     flex-direction: column;
     overflow: hidden;
   }

   /* Conteneur principal des vidéos */
   #video-call-div .videos-container {
     position: relative;
     flex: 1;
     width: 100%;
     display: flex;
     align-items: center;
     justify-content: center;
     background: #000;
   }

   /* Vidéo distante (principale) */
   #video-call-div #remote-video {
     width: 100%;
     height: 100%;
     object-fit: contain;
     background: #000;
   }

   /* Vidéo locale (petite fenêtre flottante) */
   #video-call-div #local-video {
     position: absolute;
     top: 20px;
     right: 20px;
     width: 150px;
     height: 100px;
     z-index: 100;
     border: 3px solid rgba(0, 102, 255, 0.8);
     border-radius: 12px;
     object-fit: cover;
     cursor: move;
     transition: all 0.3s ease;
     box-shadow: 0 8px 20px rgba(0, 0, 0, 0.6);
     background: #1e293b;
   }

   #video-call-div #local-video:hover {
     transform: scale(1.05);
     border-color: #0066ff;
     box-shadow: 0 10px 30px rgba(0, 102, 255, 0.5);
   }

   /* Barre d'actions en bas */
   #video-call-div .call-action-div {
     display: flex;
     justify-content: center;
     align-items: center;
     gap: 1.5rem;
     padding: 1.5rem;
     background: linear-gradient(to top, rgba(15, 23, 42, 0.98), rgba(15, 23, 42, 0.85));
     border-top: 1px solid rgba(255, 255, 255, 0.1);
     position: relative;
     z-index: 10;
   }

   #video-call-div .call-action-div .btn {
     width: 60px;
     height: 60px;
     border-radius: 50%;
     border: none;
     backdrop-filter: blur(10px);
     transition: all 0.3s ease;
     font-size: 1.4rem;
     display: flex;
     align-items: center;
     justify-content: center;
     box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
   }

   #video-call-div .call-action-div .btn:hover {
     transform: translateY(-3px) scale(1.05);
     box-shadow: 0 10px 25px rgba(0, 0, 0, 0.5);
   }

   #video-call-div .call-action-div .btn:active {
     transform: translateY(-1px) scale(0.98);
   }

   #video-call-div .call-action-div .btn-danger {
     background: linear-gradient(135deg, #ef4444, #dc2626);
     color: white;
   }

   #video-call-div .call-action-div .btn-danger:hover {
     background: linear-gradient(135deg, #dc2626, #b91c1c);
   }

   #video-call-div .call-action-div .btn-success {
     background: linear-gradient(135deg, #10b981, #059669);
     color: white;
   }

   #video-call-div .call-action-div .btn-success:hover {
     background: linear-gradient(135deg, #059669, #047857);
   }

   #video-call-div .call-action-div .btn-primary {
     background: linear-gradient(135deg, #3b82f6, #2563eb);
     color: white;
   }

   #video-call-div .call-action-div .btn-primary:hover {
     background: linear-gradient(135deg, #2563eb, #1d4ed8);
   }

   /* Indicateur de statut */
   #video-call-div .status-indicator {
     position: absolute;
     top: 20px;
     left: 20px;
     background: rgba(15, 23, 42, 0.9);
     padding: 8px 16px;
     border-radius: 20px;
     font-size: 0.85rem;
     z-index: 50;
     display: flex;
     align-items: center;
     gap: 8px;
   }

   #video-call-div .status-indicator::before {
     content: '';
     width: 8px;
     height: 8px;
     border-radius: 50%;
     background: #10b981;
     animation: pulse 2s infinite;
   }

   @keyframes pulse {
     0%, 100% { opacity: 1; }
     50% { opacity: 0.3; }
   }

   /* Responsive pour mobile */
   @media (max-width: 768px) {
     #audio-call-div #callimg img {
       width: 150px !important;
       height: 150px;
     }

     #video-call-div {
       height: 400px;
       border-radius: 0;
     }

     #video-call-div #remote-video {
       object-fit: cover;
     }

     #video-call-div #local-video {
       width: 100px;
       height: 75px;
       top: 15px;
       right: 15px;
       border-width: 2px;
     }

     #video-call-div .call-action-div {
       gap: 1rem;
       padding: 1rem;
     }

     #audio-call-div .audio-call-action-div .btn,
     #video-call-div .call-action-div .btn {
       width: 50px;
       height: 50px;
       font-size: 1.1rem;
     }

     #audio-call-div, #video-call-div {
       margin: 0;
       padding: 0;
     }

     #video-call-div .status-indicator {
       font-size: 0.75rem;
       padding: 6px 12px;
       top: 10px;
       left: 10px;
     }
   }

   /* Layout paysage sur mobile */
   @media (max-width: 768px) and (orientation: landscape) {
     #video-call-div {
       height: 100vh;
     }

     #video-call-div #local-video {
       width: 120px;
       height: 90px;
     }
   }
   </style>
